#! /bin/sh

PATH=/usr/sbin:/sbin:/usr/bin:/bin
IFS=

cd `dirname "${0}"` || exit 1
readonly G_LOCAL_SBIN=`pwd`

run()
{
    while true; do
        ${G_LOCAL_SBIN}/bbts_tracker
        sleep 10
    done
    exit 1
}

if [ $# -eq 1 ]; then
    if [ x"${1}" = x"--run" ]; then
        run
    fi
fi

exec setsid "${0}" --run </dev/null >/dev/null 2>&1
exit 1
